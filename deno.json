{
  "nodeModulesDir": "manual",
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "vite",
    "build": "vite build",
    "start": "deno serve -A _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update .",
    "test": "deno test -A",
    "test:watch": "deno test -A --watch",
    "test:auth": "deno test -A --filter auth",
    "test:middleware": "deno test -A --filter middleware",
    "test:routes": "deno test -A --filter routes",
    "test:api": "deno test -A --filter api",
    "setup:deployment": "deno run -A scripts/setup-deployment.ts"
  },
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "exclude": [
    "**/_fresh/*"
  ],
  "imports": {
    "@/": "./",
    "@felix/argon2": "jsr:@felix/argon2@^3.0.2",
    "@std/http": "jsr:@std/http@^1.0.21",
    "daisyui": "npm:daisyui@^5.3.7",
    "fresh": "jsr:@fresh/core@^2.1.4",
    "preact": "npm:preact@^10.27.2",
    "@preact/signals": "npm:@preact/signals@^2.3.2",
    "@std/cli": "jsr:@std/cli@^1.0.10",
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^1.0.7",
    "vite": "npm:vite@^7.1.3",
    "tailwindcss": "npm:tailwindcss@^4.1.10",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "@db/postgres": "jsr:@db/postgres@^0.19.5",
    "@panva/jose": "jsr:@panva/jose@^6.1.0",
    "@std/expect": "jsr:@std/expect@^1.0.6",
    "@std/path": "jsr:@std/path@^1.0.8"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ],
    "types": [
      "vite/client"
    ]
  }
}
